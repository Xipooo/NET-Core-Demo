<!-- Add Tag Helpers to the view -->
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model System.Collections.Generic.List<WozUCoreDemo.Models.Customer>


<!DOCTYPE html>
<html>
    <head>
        <title>Home Index Page</title>
    </head>
    <body>
        <h1>Home Index Page</h1>
        <p>This page will be the default landing page.</p>
        <!-- Razor syntax foreach loop that will display customer info for each customer in the model passed by the controller -->
        @foreach (var customer in Model)
        {
            <div>
                <a asp-controller="HomePage" asp-action="Edit" asp-route-id="@customer.Id">
                    <dl>
                        <dt>First Name: </dt>
                        <dd>@customer.FirstName</dd>
                        <dt>Last Name:</dt>
                        <dd>@customer.LastName</dd>
                        <dt>Email:</dt>
                        <dd>@customer.Email</dd>
                    </dl>
                </a>
            </div>
        }
    </body>
</html>